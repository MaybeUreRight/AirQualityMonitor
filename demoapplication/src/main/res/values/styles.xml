<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="item_fragment_list_name">
        <item name="android:textSize">14sp</item>
        <!--<item name="android:background">@color/item_fragment_list_station_value_bg</item>-->
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/view_padding_10</item>
        <item name="android:paddingRight">@dimen/view_padding_10</item>
        <item name="android:paddingTop">@dimen/view_padding_5</item>
        <item name="android:paddingBottom">@dimen/view_padding_5</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="item_fragment_list_value">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/item_fragment_list_value_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/view_padding_10</item>
        <item name="android:paddingRight">@dimen/view_padding_10</item>
        <item name="android:paddingTop">@dimen/view_padding_5</item>
        <item name="android:paddingBottom">@dimen/view_padding_5</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- 自定义加载数据进度条Dialog样式 -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
